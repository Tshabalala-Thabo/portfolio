.hero
  display: flex
  align-items: center
  justify-content: center
  min-height: 80vh
  padding: 2rem

.heroContent
  display: flex
  max-width: 1200px
  width: 100%

.heroText
  flex: 1
  padding-right: 2rem

  h1
    font-size: 2.5rem
    margin-bottom: 1rem

  p
    font-size: 1.1rem
    margin-bottom: 1rem

.ctaButton
  background-color: #0070f3
  color: white
  border: none
  padding: 0.75rem 1.5rem
  font-size: 1rem
  cursor: pointer
  transition: background-color 0.3s ease

  &:hover
    background-color: #0051bb

.heroImage
  flex: 1

  img
    max-width: 100%
    height: auto
    border-radius: 8px

@media (max-width: 768px)
  .heroContent
    flex-direction: column

  .heroText
    padding-right: 0
    margin-bottom: 2rem

  .heroImage
    order: -1
    margin-bottom: 2rem